<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent" android:weightSum="100"
    android:layout_height="fill_parent">


    <RelativeLayout android:orientation="horizontal"  android:id="@+id/monsterArea"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="30">

        <EditText
            android:id="@+id/monsterDefense"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:hint="敵人防禦力"
            android:gravity="center_horizontal">
        </EditText>

    </RelativeLayout>

    <LinearLayout android:orientation="horizontal"  android:id="@+id/HPArea"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="5">

        <TextView android:text="生命回復" android:layout_height="wrap_content" android:id="@+id/recovery"
            android:layout_width="fill_parent" android:padding="3dip"
            android:textSize="12sp" android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"  android:weightSum="6" android:id="@+id/cardArea"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="15">
        <ImageButton android:layout_weight="1"
            android:id="@+id/card1"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:onClick="selectCard"
            android:scaleType="fitCenter" />
        <ImageButton android:layout_weight="1"
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <ImageButton android:layout_weight="1"
            android:id="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <ImageButton android:layout_weight="1"
            android:id="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <ImageButton android:layout_weight="1"
            android:id="@+id/card5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <ImageButton android:layout_weight="1"
            android:id="@+id/card6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:id="@+id/diamondArea"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="50">
        <TextView android:text="沒頭緒~ ON HOLD" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:padding="3dip"
            android:textSize="22sp"/>
        <EditText android:id="@+id/etNum2" android:layout_height="wrap_content"
            android:layout_width="fill_parent"></EditText>

>
    </LinearLayout>

    <Button android:text="Calculate" android:id="@+id/calculateBtn"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:onClick="clickHandler">
    </Button>

</LinearLayout>

