<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent" android:weightSum="100"
    android:layout_height="fill_parent">


    <RelativeLayout android:orientation="horizontal"  android:id="@+id/monsterArea"
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="10">



        <ImageButton android:layout_weight="1"
            android:id="@+id/searchCard"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/search_icon"
            android:padding="0dp"
            android:scaleType="fitCenter" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="fill_parent" android:layout_height="0dp"
        android:layout_weight="90">

        <LinearLayout
            android:id="@+id/selectCardArea"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        </LinearLayout>


    </ScrollView>


</LinearLayout>

